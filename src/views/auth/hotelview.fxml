<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="service.HotelViewService">

    <Label style="-fx-font-size: 18px;" text="Hotel Management System" />

    <VBox spacing="5">
        <HBox spacing="5">
            <Label text="Name:" />
            <TextField fx:id="nameField" />
        </HBox>
        <HBox spacing="5">
            <Label text="Convention:" />
            <TextField fx:id="conventionField" />
        </HBox>
        <HBox spacing="5">
            <Label text="Country:" />
            <TextField fx:id="countryField" />
        </HBox>
        <HBox spacing="5">
            <Label text="City:" />
            <TextField fx:id="cityField" />
        </HBox>
        <HBox spacing="5">
            <Label text="Address:" />
            <TextField fx:id="addressField" />
        </HBox>
        <HBox spacing="5">
            <Label text="Email:" />
            <TextField fx:id="emailField" />
        </HBox>
        <HBox spacing="5">
            <Label text="Phone Number:" />
            <TextField fx:id="phoneNumberField" />
        </HBox>
        <HBox spacing="5">
            <Label text="id:" />
            <TextField fx:id="IdField" />
        </HBox>
    </VBox>

    <HBox spacing="10">
        <Button onAction="#handleAddHotel" text="Add" />
        <Button onAction="#handleUpdateHotel" text="Update" />
        <Button onAction="#handleDeleteHotel" text="Delete" />
      <Button fx:id="getBtn" onAction="#handleGetHotelById" text="Get" />
    </HBox>

    <ListView fx:id="hotelListView" />
</VBox>
